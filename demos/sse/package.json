{
  "name": "sse-demo",
  "private": true,
  "type": "module",
  "dependencies": {
    "@remix-run/compression-middleware": "workspace:*",
    "@remix-run/dom": "jam",
    "@remix-run/events": "jam",
    "@remix-run/fetch-router": "workspace:*",
    "@remix-run/interaction": "workspace:*",
    "@remix-run/logger-middleware": "workspace:*",
    "@remix-run/node-fetch-server": "workspace:*",
    "@remix-run/response": "workspace:*",
    "@remix-run/static-middleware": "workspace:*",
    "@remix-run/sse": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "esbuild": "^0.25.10",
    "tsx": "catalog:"
  },
  "scripts": {
    "dev": "pnpm run --filter \".\" --parallel \"/^dev:/\"",
    "dev:server": "NODE_ENV=development tsx watch server.ts",
    "dev:browser": "esbuild app/assets/*.tsx --outbase=app/assets --outdir=public/assets --bundle --minify --splitting --format=esm --entry-names='[dir]/[name]' --chunk-names='chunks/[name]-[hash]' --sourcemap --watch",
    "start": "tsx server.ts",
    "test": "tsx --test",
    "typecheck": "tsgo --noEmit"
  }
}
