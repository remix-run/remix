{
  "name": "assets-demo",
  "private": true,
  "type": "module",
  "dependencies": {
    "@remix-run/assets": "workspace:*",
    "@remix-run/assets-middleware": "workspace:*",
    "@remix-run/component": "workspace:*",
    "@remix-run/dev-assets-middleware": "workspace:*",
    "@remix-run/fetch-router": "workspace:*",
    "@remix-run/node-fetch-server": "workspace:*",
    "@remix-run/static-middleware": "workspace:*",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "esbuild": "catalog:",
    "tsx": "catalog:"
  },
  "imports": {
    "#assets/*": {
      "development": "./.assets/*.dev.ts",
      "test": "./.assets/*.dev.ts",
      "default": "./.assets/*.build.ts"
    }
  },
  "scripts": {
    "dev": "NODE_ENV=development NODE_OPTIONS='--conditions=development' tsx watch server.ts",
    "build": "tsx build.ts",
    "build:bundled": "tsx build.bundled.ts",
    "start": "NODE_ENV=production tsx server.ts",
    "typecheck": "tsgo --noEmit"
  }
}
