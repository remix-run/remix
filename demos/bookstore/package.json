{
  "name": "bookstore-demo",
  "private": true,
  "type": "module",
  "dependencies": {
    "@remix-run/dom": "jam",
    "@remix-run/events": "jam",
    "@remix-run/fetch-router": "workspace:*",
    "@remix-run/file-storage": "workspace:*",
    "@remix-run/headers": "workspace:*",
    "@remix-run/node-fetch-server": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "esbuild": "^0.25.10",
    "tsx": "^4.20.6"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx watch server.ts",
    "dev:browser": "esbuild app/assets/*.tsx --outbase=app --outdir=public --bundle --minify --splitting --format=esm --entry-names='[dir]/[name]' --chunk-names='chunks/[name]-[hash]' --sourcemap --watch",
    "start": "tsx server.ts",
    "test": "NODE_ENV=test tsx --test",
    "typecheck": "tsc --noEmit"
  }
}
