{
  "name": "bookstore-demo",
  "private": true,
  "type": "module",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "remix": "workspace:*"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "cheerio": "^1.2.0",
    "esbuild": "catalog:",
    "glob": "^11.0.0",
    "tsx": "catalog:"
  },
  "imports": {
    "#assets/*": {
      "placeholder": "./.assets/*.placeholder.ts",
      "default": "./.assets/*.build.ts"
