{
  "name": "remix-the-web",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "eslint": "^9.33.0",
    "eslint-plugin-prefer-let": "^4.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.40.0"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "pnpm -r build",
    "clean": "git clean -fdX -e '!/.env' .",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "publish-release": "node --env-file .env ./scripts/publish-release.js",
    "publish-release-ci": "node ./scripts/publish-release.js",
    "tag-release": "node ./scripts/tag-release.js",
    "test": "pnpm -r --workspace-concurrency 1 test",
    "typecheck": "pnpm -r --workspace-concurrency 1 typecheck",
    "view-changes": "node ./scripts/view-changes.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@remix-run/dom",
      "@remix-run/events",
      "@remix-run/style",
      "@swc/core",
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
