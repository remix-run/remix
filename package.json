{
  "name": "remix-the-web",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "pnpm -r build",
    "clean": "git clean -fdX -e '!/.claude/settings.local.json' -e '!/.env' .",
    "publish-release": "node --env-file .env ./scripts/publish-release.ts",
    "publish-release-ci": "node ./scripts/publish-release.ts",
    "tag-release": "node ./scripts/tag-release.ts",
    "test": "pnpm -r --workspace-concurrency 1 test",
    "view-changes": "node ./scripts/view-changes.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "sharp",
      "workerd"
    ]
  }
}
