{
  "name": "@remix-run/route-pattern",
  "version": "0.5.0",
  "description": "Route patterns are strings that describe the structure of URLs you want to match",
  "author": "Michael Jackson <mjijackson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/route-pattern"
  },
  "homepage": "https://github.com/remix-run/remix/tree/v3/packages/route-pattern#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.cjs",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs",
        "default": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "esbuild": "^0.20.0"
  },
  "scripts": {
    "build:types": "tsc --project tsconfig.build.json",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.js --format=esm --platform=neutral --sourcemap",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --platform=node --sourcemap",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:esm && pnpm run build:cjs",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-strip-types --disable-warning=ExperimentalWarning --test './src/**/*.test.ts'",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "route",
    "pattern",
    "url",
    "match",
    "matcher"
  ]
}
