{
  "name": "@remix-run/watch",
  "version": "0.1.0",
  "description": "File watcher with HMR for Remix applications",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/watch"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/watch#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "bin",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "bin": {
    "remix-watch": "./bin/remix-watch.js"
  },
  "exports": {
    ".": "./src/index.ts",
    "./runtime": "./src/runtime.ts",
    "./loader": "./src/loader.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./runtime": {
        "types": "./dist/runtime.d.ts",
        "default": "./dist/runtime.js"
      },
      "./loader": {
        "types": "./dist/loader.d.ts",
        "default": "./dist/loader.js"
      },
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "clean": "git clean -fdX",
    "prepublishOnly": "pnpm run build",
    "test": "node --disable-warning=ExperimentalWarning --test",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@remix-run/component": "workspace:*",
    "@remix-run/component-hmr": "workspace:*",
    "@swc/core": "^1.10.1",
    "chokidar": "^4.0.1",
    "es-module-lexer": "^2.0.0",
    "get-tsconfig": "^4.8.1"
  },
  "devDependencies": {
    "@remix-run/fetch-router": "workspace:*",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:"
  }
}
