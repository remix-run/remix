    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "happy-dom": "^2.49.0",
    "msw": "^0.39.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.0",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "prisma": "^3.11.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.1.0",
