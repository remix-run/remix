    "@remix-run/serve": "1.3.4",
    "marked": "^4.0.12",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "1.3.4",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0",
    "@remix-run/dev": "1.3.4",
    "@remix-run/eslint-config": "1.3.4",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.4",
