{
  "name": "@remix-run/dev-assets-middleware",
  "version": "0.0.0",
  "description": "Development middleware for serving and transforming JavaScript/TypeScript source files",
  "author": "Shopify Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/dev-assets-middleware"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/dev-assets-middleware#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "!src/**/*.test.ts",
    "!e2e"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  },
  "devDependencies": {
    "@remix-run/component": "workspace:^",
    "@remix-run/fetch-router": "workspace:*",
    "@remix-run/node-fetch-server": "workspace:*",
    "@types/node": "catalog:",
    "@types/picomatch": "^3.0.2",
    "@typescript/native-preview": "catalog:",
    "esbuild": "^0.25.0",
    "playwright": "catalog:",
    "prettier": "^3.4.2",
    "tsx": "catalog:"
  },
  "peerDependencies": {
    "@remix-run/fetch-router": "workspace:^",
    "esbuild": "catalog:"
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "clean": "git clean -fdX",
    "prepublishOnly": "pnpm run build",
    "test": "node --disable-warning=ExperimentalWarning --test './src/**/*.test.ts' './e2e/*.playwright.ts'",
    "test:unit": "node --disable-warning=ExperimentalWarning --test './src/**/*.test.ts'",
    "test:e2e": "node --disable-warning=ExperimentalWarning --test './e2e/*.playwright.ts'",
    "test:e2e:dev": "tsx e2e/dev-server.ts",
    "typecheck": "tsgo --noEmit"
  },
  "keywords": [
    "fetch",
    "router",
    "middleware",
    "assets",
    "transform",
    "esbuild",
    "typescript"
  ],
  "dependencies": {
    "@remix-run/component-hmr": "workspace:*",
    "chokidar": "^4.0.3",
    "es-module-lexer": "^2.0.0",
    "magic-string": "^0.30.21",
    "picomatch": "^4.0.2"
  }
}
