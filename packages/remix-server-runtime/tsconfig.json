{
  "exclude": ["dist", "__tests__"],
  "compilerOptions": {
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "target": "ES2019",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "rootDir": ".",

    // Avoid naming conflicts between lib.dom.d.ts and globals.ts
    "skipLibCheck": true
  }
}
