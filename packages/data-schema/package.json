{
  "name": "@remix-run/data-schema",
  "version": "0.1.0",
  "description": "Tiny, standards-aligned schema validation",
  "author": "Michael Jackson <mjijackson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/data-schema"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/data-schema#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": "./src/index.ts",
    "./checks": "./src/checks.ts",
    "./coerce": "./src/coerce.ts",
    "./lazy": "./src/lazy.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./checks": {
        "types": "./dist/checks.d.ts",
        "default": "./dist/checks.js"
      },
      "./coerce": {
        "types": "./dist/coerce.d.ts",
        "default": "./dist/coerce.js"
      },
      "./lazy": {
        "types": "./dist/lazy.d.ts",
        "default": "./dist/lazy.js"
      },
      "./package.json": "./package.json"
    }
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:"
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "clean": "git clean -fdX",
    "prepublishOnly": "pnpm run build",
    "test": "node --disable-warning=ExperimentalWarning --test",
    "typecheck": "tsgo --noEmit"
  },
  "keywords": [
    "validation",
    "schema",
    "standard-schema",
    "validator",
    "remix"
  ],
  "dependencies": {
    "@standard-schema/spec": "^1.1.0"
  }
}
