{
  "name": "component-demos",
  "private": true,
  "type": "module",
  "dependencies": {
    "motion": "^12.28.1",
    "remix": "workspace:^"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.11"
  },
  "scripts": {
    "start": "concurrently \"pnpm dev\" \"node --experimental-strip-types server.ts\"",
    "build": "esbuild ./*/entry.tsx --bundle --outdir=. --out-extension:.js=.bundled.js --format=esm --platform=browser --target=es2020 --sourcemap=inline",
    "dev": "esbuild ./*/entry.tsx --bundle --outdir=. --out-extension:.js=.bundled.js --format=esm --platform=browser --target=es2020 --sourcemap=inline --watch"
  }
}
