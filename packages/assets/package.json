{
  "name": "@remix-run/assets",
  "version": "0.0.0",
  "description": "Unbundled browser build tooling and development handler",
  "author": "Michael Jackson <mjijackson@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/assets"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/assets#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "!src/**/*.test.ts",
    "!e2e"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./package.json": "./package.json"
    }
  },
  "dependencies": {
    "@remix-run/headers": "workspace:*",
    "@remix-run/mime": "workspace:*",
    "es-module-lexer": "^2.0.0",
    "esbuild": "catalog:",
    "magic-string": "^0.30.21",
    "picomatch": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/picomatch": "^3.0.2",
    "@typescript/native-preview": "catalog:",
    "minimatch": "^10.1.2",
    "playwright": "catalog:",
    "prettier": "^3.4.2"
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "clean": "git clean -fdX",
    "prepublishOnly": "pnpm run build",
    "test": "node --disable-warning=ExperimentalWarning --test './src/**/*.test.ts' './e2e/*.test.ts'",
    "test:unit": "node --disable-warning=ExperimentalWarning --test './src/**/*.test.ts'",
    "test:e2e": "node --disable-warning=ExperimentalWarning --test './e2e/*.test.ts'",
    "typecheck": "tsgo --noEmit"
  },
  "keywords": [
    "remix",
    "assets",
    "transform",
    "esbuild",
    "unbundled"
  ]
}
