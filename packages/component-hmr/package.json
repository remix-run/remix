{
  "name": "@remix-run/component-hmr",
  "version": "0.1.0",
  "description": "Hot Module Replacement (HMR) for Remix components",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/remix-run/remix.git",
    "directory": "packages/component-hmr"
  },
  "homepage": "https://github.com/remix-run/remix/tree/main/packages/component-hmr#readme",
  "files": [
    "LICENSE",
    "README.md",
    "dist",
    "src",
    "!src/**/*.test.ts"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./transform": "./src/transform.ts",
    "./runtime": "./src/runtime.ts",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./transform": {
        "types": "./dist/transform.d.ts",
        "default": "./dist/transform.js"
      },
      "./runtime": {
        "types": "./dist/runtime.d.ts",
        "default": "./dist/runtime.js"
      },
      "./package.json": "./package.json"
    }
  },
  "scripts": {
    "build": "tsgo -p tsconfig.build.json",
    "clean": "git clean -fdX",
    "prepublishOnly": "pnpm run build",
    "test": "node --disable-warning=ExperimentalWarning --test",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@remix-run/component": "workspace:*",
    "@swc/core": "^1.10.1",
    "@swc/types": "^0.1.17"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:"
  }
}
